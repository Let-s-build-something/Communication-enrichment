<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.App" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/brandMain</item>
        <item name="colorPrimaryDark">@color/brandMainDark</item>

        <item name="android:statusBarColor">@color/brandMainDark</item>
    </style>

    <style name="Theme.App.Starting" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@color/brandMain</item>
        <!-- Set the splash screen background to black -->
        <item name="windowSplashScreenBackground">@color/brandMain</item>
        <!-- Use windowSplashScreenAnimatedIcon to add a drawable or an animated
             drawable. -->
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher_round</item>
        <!-- Set the theme of the Activity that follows your splash screen. -->
        <item name="postSplashScreenTheme">@style/Theme.App</item>
    </style>
</resources>